<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.LookerUpperController">
   <children>
      <VBox alignment="CENTER" layoutX="-1.0" layoutY="26.0" prefHeight="400.0" prefWidth="600.0" spacing="40.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label id="title" styleClass="title" stylesheets="@styles.css" text="Game Looker Upper">
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font>
            </Label>
            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Label stylesheets="@styles.css" text="Search for a game:" />
                        <TextField fx:id="searchBox" />
                        <Button fx:id="searchButton" mnemonicParsing="false" text="Search!" />
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <ListView fx:id="listView" maxWidth="-Infinity" prefHeight="200.0" prefWidth="400.0" />
                        <StackPane prefHeight="150.0" prefWidth="200.0">
                           <children>
                              <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                           </children>
                        </StackPane>
                     </children>
                  </HBox>
                  <Label fx:id="totalResultsLabel" text="Total Results: " />
                  <Label fx:id="matchingGamesLabel" layoutX="271.0" layoutY="280.0" text="Matching Games" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
