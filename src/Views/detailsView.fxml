   <children>
      <VBox alignment="CENTER" layoutX="30.0" layoutY="28.0" spacing="20.0">
         <children>
            <Label fx:id="gameTitleLabel" styleClass="title" text="Label" />
            <HBox prefWidth="540.0">
               <children>
                  <VBox id="labelBox" prefWidth="390.0">
                     <children>
                        <GridPane prefHeight="154.0" prefWidth="190.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <Label text="Number of Reviews:" GridPane.rowIndex="1" />
                              <Label text="Release Date:" />
                              <Label fx:id="reviewsLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label fx:id="releaseDateLabel" text="Label" GridPane.columnIndex="1" />
                              <Label GridPane.rowIndex="2" />
                           </children>
                        </GridPane>
                        <GridPane>
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <Label text="Rating:" />
                              <Label text="Description:" GridPane.rowIndex="1" />
                              <Label fx:id="ratingsLabel" prefHeight="18.0" prefWidth="192.0" text="Label" GridPane.columnIndex="1" />
                              <Label fx:id="descriptionLabel" maxWidth="1.7976931348623157E308" prefHeight="122.0" prefWidth="217.0" text="Label" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                           </children>
                        </GridPane>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER">
                     <children>
                        <StackPane prefHeight="298.0" prefWidth="150.0">
                           <children>
                              <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../Images/defaultImage.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </StackPane>
                        <Button mnemonicParsing="false" onAction="#returnToSearch" text="Return to Search" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
